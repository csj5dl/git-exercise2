<h1>User List</h1>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Role</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <% if user.is_admin? %>
          <td>Admin</td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
